@model KampusKodu.Models.CreateEntryViewModel

@{
    ViewData["Title"] = "Yorum Yaz";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Konu: @Model.TopicTitle</h5>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="CreateEntry" method="post">
                        <input type="hidden" asp-for="TopicId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Senin Düşüncelerin</label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Buraya konu hakkındaki yorumunu yazabilirsin..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Görünecek İsim (İsteğe Bağlı)</label>
                            <input asp-for="Author" class="form-control" placeholder="Adını yazmazsan 'Anonim' olarak görünürsün" />
                            <div class="form-text text-muted">Gizli kalmak istiyorsan burayı boş bırakabilirsin.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">✅ Yorumu Yayınla</button>
                            <a asp-action="Details" asp-route-id="@Model.TopicId" class="btn btn-outline-secondary">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>